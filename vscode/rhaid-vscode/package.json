{
  "name": "rhaid-vscode",
  "displayName": "Rhaid Autofix",
  "description": "VS Code extension for Rhaid Autofix - scan and fix code issues in your workspace.",
  "version": "1.0.0",
  "publisher": "your-publisher-name",
  "engines": {
    "vscode": "^1.74.0"
  },
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-repo/rhaid-autofix.git"
  },
  "bugs": {
    "url": "https://github.com/your-repo/rhaid-autofix/issues"
  },
  "license": "MIT",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "rhaid.scanWorkspace",
        "title": "Rhaid: Scan Workspace"
      },
      {
        "command": "rhaid.fixCurrentFile",
        "title": "Rhaid: Fix Current File"
      },
      {
        "command": "rhaid.enterLicenseKey",
        "title": "Rhaid: Enter License Key"
      },
      {
        "command": "rhaid.openSettings",
        "title": "Rhaid: Open Settings"
      }
    ],
    "configuration": {
      "title": "Rhaid",
      "properties": {
        "rhaid.pathToBinary": {
          "type": "string",
          "default": "rhaid",
          "description": "Path to the Rhaid binary."
        },
        "rhaid.scanArgs": {
          "type": "string",
          "default": "--json",
          "description": "Arguments for Rhaid scan mode."
        },
        "rhaid.fixArgs": {
          "type": "string",
          "default": "",
          "description": "Arguments for Rhaid fix mode."
        },
        "rhaid.fixOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Automatically fix on save."
        },
        "rhaid.licenseKey": {
          "type": "string",
          "default": "",
          "description": "Rhaid Pro license key."
        }
      }
    },
    "codeActions": [
      {
        "languages": [
          "*"
        ],
        "actions": [
          {
            "kind": "quickfix",
            "title": "Rhaid: Fix this file",
            "command": "rhaid.fixCurrentFile"
          }
        ]
      }
    ]
  }
}
